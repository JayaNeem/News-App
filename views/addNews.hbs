<div class="container">
  {{#if msg}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {{/if}}
  <br>
  <h4>Add Your News</h4>
  <br>
  <form action="addNews" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="inputHeadline">Headline</label>
      <input type="text" class="form-control col-md-7" id="inputHeadline" placeholder="Enter headline" name="headline">
    </div>
    <div class="form-group">
      <label for="formControlTextarea">Content</label>
      <textarea class="form-control col-md-7" id="formControlTextarea" rows="10" name="content"></textarea>
    </div>
    <div class="custom-file">
      <input type="file" class="custom-file-input" id="customFile" name="newsPic">
      <label class="custom-file-label col-md-7" for="customFile">Choose file</label>
    </div>
    <br><br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>